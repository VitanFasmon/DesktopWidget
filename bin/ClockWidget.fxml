<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ClockWidgetController" stylesheets="@styles/clockStyles.css" fx:id="root"
    styleClass="clock-anchor-pane" minWidth="300">
    <children>
        <Label fx:id="timeLabel" alignment="CENTER" text="TIME" textAlignment="CENTER"
            stylesheets="@styles/clockStyles.css" styleClass="clock-label" AnchorPane.leftAnchor="5"
            AnchorPane.rightAnchor="5" AnchorPane.topAnchor="5" AnchorPane.bottomAnchor="5" />
        <Button fx:id="exitBtn" onAction="#onExitButtonClick"
            stylesheets="@styles/clockStyles.css" styleClass="clock-exit"
            AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0">
            <graphic>
                <ImageView fx:id="exitIcon" fitHeight="14" fitWidth="14">
                    <image>
                        <Image url="@images/exit-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>